<aura:component >
    <lightning:recordEditForm recordId="{!v.recID}" objectApiName="Contact" onsuccess="{!c.contactsuccess}" onerror="{!c.errors}">
        <lightning:messages />
        <lightning:inputField fieldName="FirstName" />
        <lightning:inputField fieldName="LastName" />
        <lightning:inputField fieldName="Phone" />
        <lightning:inputField fieldName="Email" />
        
        <lightning:button class="slds-m-top_small slds-m-left_small floatright" variant="brand" type="submit" name="update" label="Save" />
        <lightning:button class="slds-m-top_small floatright" type="button" name="Cancel" label="Cancel" onclick="{!c.close}"/>
    </lightning:recordEditForm>
</aura:component>